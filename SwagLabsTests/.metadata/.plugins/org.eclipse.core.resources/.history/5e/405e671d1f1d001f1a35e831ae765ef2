package Pages;

import org.openqa.selenium.By;
import org.openqa.selenium.WebElement;
import static Core.DriverFactory.getDriver;

public class LoginPage {
	
	public
	WebElement inputUserName = getDriver().findElement(By.name("username"));
	
	public
	WebElement inputPassword = getDriver().findElement(By.name("password"));
	
	public
	WebElement btnLogin = getDriver().findElement(By.xpath("//button[@type='submit']"));
	
	public
	WebElement txtLoginTitle = getDriver().findElement(By.xpath("//h5[text()='Login']"));
}
